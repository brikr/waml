{
  "name": "weakauras-markup-language",
  "version": "1.0.0",
  "description": "A programmatic way to define WeakAuras for World of Warcraft",
  "repository": "github:brikr/waml",
  "bin": {
    "waml": "bin/waml"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "npm run compile && npm run copy-assets",
    "clean": "gts clean",
    "compile": "tsc",
    "copy-assets": "cp -r src/templates build/",
    "fix": "gts fix",
    "lint": "gts lint",
    "test": "jest",
    "pub": "rm -rf build/ && npm run build && npm publish",
    "watch": "nodemon -L --watch \"src/**\" --ext \"ts,yml\" --exec \"npm run build\""
  },
  "author": "brikr",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/node": "^14.11.2",
    "gts": "^3.1.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "lodash": "^4.17.21",
    "node-weakauras-parser": "^3.2.0",
    "yaml": "^2.1.1"
  }
}
